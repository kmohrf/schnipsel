#!/bin/sh

set -eu

APP_USER=schnipsel
APP_ETC=/etc/$APP_USER
APP_SETTINGS=$APP_ETC/settings.py

if [ -f "$APP_SETTINGS" ]; then
    touch "$APP_ETC/maintenance_mode"
    schnipselctl dumpdatabase --prefix preinst_auto --no-input
fi

set +eu

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
